@if (IsDarkTheme)
{
    <style>
        code:not([class="hljs"]) {
            color: #adbac7;
            background: #22272e;
            padding: 0 .2rem;
            border-radius: .2rem;
        }
    </style>
    <link rel="stylesheet" href="~/css/github-dark-dimmed.min.css">
}
else
{
    <style>
        code:not([class="hljs"]) {
            color: #444;
            background: #f3f3f3;
            padding: 0 .2rem;
            border-radius: .2rem;
        }
    </style>
    <link rel="stylesheet" href="~/css/default.min.css">
}

@code {
    [Parameter, EditorRequired]
    public bool IsDarkTheme { get; set; }
}
